@model Pharmacist

<h1 class="alert alert-warning text-center">Add New Pharmacist</h1>
<div asp-validation-summary="ModelOnly" , class="text-danger"></div>

<div class="row">
    <form class="col-4" method="post" asp-controller="Pharmacist" asp-action="AddNew" enctype="multipart/form-data">
        <div>
            <label asp-for="FullName"></label>
            <input type="text" asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Specialization"></label>
            <input type="text" asp-for="Specialization" class="form-control" />
            <span asp-validation-for="Specialization" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Salary"></label>
            <input type="number" asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="BirthDate"></label>
            <input asp-for="BirthDate" class="form-control" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ConfirmCode"></label>
            <input asp-for="ConfirmCode" class="form-control" />
            <span asp-validation-for="ConfirmCode" class="text-danger"></span>
        </div>

        <div class="mt2">
            <label asp-for="IsActive"></label>
            <input type="checkbox" asp-for="IsActive" />
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>

        <div>
        <label asp-for="ImagePath"></label>
        <input type="file" name="imageFormFile" id="imageFormFile"  calss="form-control" onchange="AddImage()" />
        <span asp-validation-for="ImagePath"></span>

        </div> 

        <button type="submit" class="btn btn-primary" mt-6>Add</button>
    </form>

    <div class="col-4">
    <img src="" id="pharmImage" style="width:100%; aspect-ratio:1/1" class="card" />
    </div>

</div>

<a asp-controller="Pharmacist" asp-action="GetIndexView">Back to List</a>

@section Scripts{
    <script>
        function AddImage() {
            document.getElementById('pharmImage').src = window.URL.createObjectURL(document.getElementById('imageFormFile').files[0]);

            // var input = document.getElementById('imageFormFile');
            // var imgFile = input.files[0];
            // var imgUrl = window.URL.createObjectURL(imgFile);
            // var imgElement = document.getElementById('empImage');
            // imgElement.src = imgUrl;
        }
    </script>
}
}
