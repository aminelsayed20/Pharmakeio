@model IEnumerable<Pharmacist>

    <h1 class="alert alert-primary text-center">Pharmacists</h1>

    <a asp-controller="Pharmacist" asp-action="GetCreateView" class="btn btn-success mb-3">Create a New Pharmacist </a>

    <div class="row mb-10 justify-content-center">

        <form method="get" class="col-md-6">
            <div class="input-group">
                <input type="text" name="search" class="form-control" value="@ViewBag.Search" />
                <button type="submit" class="btn btn-outline-primary input-group-append"><i class="bi bi-search"></i></button>
            </div>
        </form>
    </div>
    <br />
    <br />
    @if (Model.Count() > 0)
    {
        <div class="d-flex justify-content-center">
            @foreach (var pharmacist in Model)
            {
                <div class="card m-2" border-radius="10px" style="display:inline-block;width:18rem">

                    <img src="@pharmacist.ImagePath" class="card-img-top" style="width:100%; aspect-ratio:1/1" />

                    <div class="card-body">
                        <h5 class="card-title text-center" style="color:darkblue">@pharmacist.FullName</h5>
                        <p class="card-text text-center fw-bold" style="color:maroon">@pharmacist.Specialization</p>
                    </div>

                    <div class="d-flex justify-content-center mb-2">
                        <a asp-controller="pharmacist" asp-action="GetDetailsView" asp-route-id="@pharmacist.Id"
                           class="btn btn-outline-primary" title="Details">
                            <i class="bi bi-list-ul"></i>
                        </a>
                        &nbsp;
                        <a asp-controller="Pharmacist" asp-action="GetEditView" asp-route-id="@pharmacist.Id"
                           class="btn btn-outline-success" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        &nbsp;
                        <a asp-controller="Pharmacist" asp-action="GetDeleteView" asp-route-id="@pharmacist.Id"
                           class="btn btn-outline-danger" title="Delete">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>

                </div>
            }
        </div>
    }
    else
    {
        <h1 class="alert alert-danger text-center">There is no data.</h1>
    }
