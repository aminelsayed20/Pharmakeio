@model PharmaceuticalDepartment

<h1 class="alert alert-warning text-center">Add New medicines Department</h1>
<div asp-validation-summary="ModelOnly" , class="text-danger"></div>

<div class="row">
    <form class="col-4" method="post" asp-controller="PharmaceuticalDepartment" asp-action="AddNew" enctype="multipart/form-data">
        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Description"></label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ConfirmCode"></label>
            <input asp-for="ConfirmCode" class="form-control" />
            <span asp-validation-for="ConfirmCode" class="text-danger"></span>
        </div>
       
    

        <button type="submit" class="btn btn-primary" mt-6>Add</button>
    </form>
  

</div>


<a asp-controller="PharmaceuticalDepartment" asp-action="GetIndexView">Back to List</a>
