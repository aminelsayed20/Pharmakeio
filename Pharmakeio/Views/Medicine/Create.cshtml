@model Medicine

<h1 class="alert alert-warning text-center">Add New Medicin</h1>
<div asp-validation-summary="ModelOnly" , class="text-danger"></div>

<div class="row">
    <form class="col-4" method="post" asp-controller="Medicine" asp-action="AddNew" enctype="multipart/form-data">
        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Description"></label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ProductionDate"></label>
            <input asp-for="ProductionDate" class="form-control" />
            <span asp-validation-for="ProductionDate" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ShelfLife"></label>
            <input type="number" asp-for="ShelfLife" class="form-control" />
            <span asp-validation-for="ShelfLife" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Price"></label>
            <input  asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        
        <div>
            <label asp-for="PharmaceuticalDepartmentId"></label>
            <select class="form-control" asp-for="PharmaceuticalDepartmentId"
                    asp-items="@(new SelectList(ViewBag.AllDepartments,"Id", "Name"))">
                <option selected disabled>select...</option>
                <span asp-validation-for="PharmaceuticalDepartment" class="text-danger"></span>
            </select>
        </div> 

        
        <div>
            <label asp-for="ImagePath"></label>
            <input type="file" name="imageFormFile" id="imageFormFile" calss="form-control" onchange="AddImage()" />
            <span asp-validation-for="ImagePath"></span>

        </div> 

        <button type="submit" class="btn btn-primary" mt-3>Add</button>
    </form>
    <div class="col-4">
        <img src="" id="empImage" style="width:100%; aspect-ratio:1/1" class="card" />
    </div>

</div>
<a asp-controller="Medicine" asp-action="GetIndexView">Back to List</a>

@section Scripts{
    <script>
        function AddImage() {
            document.getElementById('empImage').src = window.URL.createObjectURL(document.getElementById('imageFormFile').files[0]);

            // var input = document.getElementById('imageFormFile');
            // var imgFile = input.files[0];
            // var imgUrl = window.URL.createObjectURL(imgFile);
            // var imgElement = document.getElementById('empImage');
            // imgElement.src = imgUrl;
        }
    </script>
}

